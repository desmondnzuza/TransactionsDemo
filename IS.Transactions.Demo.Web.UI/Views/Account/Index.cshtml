            @Html.DisplayFor(modelItem => item.AccountNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OutstandingBalance)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { code = item.Code }) |
